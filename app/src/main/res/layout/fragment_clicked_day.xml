<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tv_feature_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        android:textStyle="bold"
        android:textColor="#adb5bd"
        android:text="@string/desc_clicked_day"
    />

    <EditText
        android:id="@+id/et_location_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Specific locations/addresses, cities, etc."
    />

    <Button
        android:id="@+id/btn_add_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Location"
    />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_clicked_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>