<?xml version="1.0" encoding="utf-8"?>
<!-- to be used by LocationAdapter in ui folder for RecyclerView in main screen -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <!--  https://stackoverflow.com/questions/25279715/android-how-to-add-icon-at-the-left-side-of-the-textview  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_location_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"

            />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>